@model IEnumerable<NewsApp.Models.DisplayArticle>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<button type="button" onclick="location.href='@Url.Action("ClearDatabase", "DisplayArticles")'">Wyczyść baze</button>
<button type="button" onclick="location.href='@Url.Action("UpdateDatabase", "DisplayArticles")'">Pobierz dane</button>
<button type="button" onclick="location.href='@Url.Action("Show", "DisplayArticles")'">User</button>
<button type="button" onclick="location.href='@Url.Action("ControlPanel", "DisplayArticles")'">Admin</button>

<button type="button" onclick="location.href='@Url.Action("ControlPanel", "DisplayArticles", new { category = "top" })'">Top</button>
<button type="button" onclick="location.href='@Url.Action("ControlPanel", "DisplayArticles", new { category = "business" })'">Biznes</button>
<button type="button" onclick="location.href='@Url.Action("ControlPanel", "DisplayArticles", new { category = "entertainment" })'">Rozrywka</button>
<button type="button" onclick="location.href='@Url.Action("ControlPanel", "DisplayArticles", new { category = "health" })'">Zdrowie</button>
<button type="button" onclick="location.href='@Url.Action("ControlPanel", "DisplayArticles", new { category = "science" })'">Nauka</button>
<button type="button" onclick="location.href='@Url.Action("ControlPanel", "DisplayArticles", new { category = "sports" })'">Sport</button>
<button type="button" onclick="location.href='@Url.Action("ControlPanel", "DisplayArticles", new { category = "technology" })'">Technologia</button>

<p>
    @Html.ActionLink("Wyczyść baze", "ClearDatabase")
</p>
<p>
    @Html.ActionLink("Pobierz dane", "UpdateDatabase")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.urlToImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publishetAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.source)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.urlToImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.publishetAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.source)
            </td>

        </tr>
    }

</table>
